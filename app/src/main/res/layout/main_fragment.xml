<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".ui.main.MainFragment">

    <include layout="@layout/toolbar" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/addVideoButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:alpha="0.5"
        android:background="?attr/selectableItemBackground"
        android:scaleType="fitXY"
        android:src="@drawable/ic_add_circle_outline_black_42dp"
        android:tint="?android:attr/textColorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/message"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_margin"
        android:text="@string/add_a_video"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/addVideoButton"
        app:layout_constraintStart_toStartOf="@+id/addVideoButton"
        app:layout_constraintTop_toBottomOf="@+id/addVideoButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
